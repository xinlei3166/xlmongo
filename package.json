{
  "name": "xlmongo",
  "version": "0.2.4",
  "description": "",
  "author": "junxi",
  "license": "ISC",
  "main": "dist/xlmongo.cjs.js",
  "moudule": "dist/xlmongo.es.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xinlei3166/xlmongo.git"
  },
  "keywords": [
    "node",
    "mongodb",
    "pool"
  ],
  "scripts": {
    "test": "jest",
    "dev": "rollup -w -c scripts/config.js -environment FORMAT:cjs",
    "build": "npm run clean && run-p build:*",
    "build:cjs": "rollup -c scripts/rollup.config.js --environment FORMAT:cjs",
    "build:es": "rollup -c scripts/rollup.config.js --environment FORMAT:es",
    "build:umd": "rollup -c scripts/rollup.config.js --environment FORMAT:umd",
    "clean": "rm -rf dist",
    "deploy": "git push origin --tags && npm run build && npm publish",
    "preinstall": "node ./scripts/check-yarn.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node scripts/verify-commit.js"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "generic-pool": "^3.7.1",
    "mongodb": "^3.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/plugin-replace": "^2.3.3",
    "chalk": "^4.1.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2",
    "rollup": "^2.22.1",
    "rollup-plugin-terser": "^6.1.0"
  }
}
